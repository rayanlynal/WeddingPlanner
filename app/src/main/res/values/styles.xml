<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Theme for Full Screen Activity-->
    <style name="Theme.MaterialComponents.Light.NoActionBar.FullScreen" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--Activity White Theme-->
    <style name="WhiteTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--Common EditText style for TextInput Layout-->
    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <!--All Material Buttons Style-->
    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:height">@dimen/_48sdp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
    </style>

</resources>